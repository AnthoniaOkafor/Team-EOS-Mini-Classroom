        </nav>
    </header>

    <div class="">
        <% if(error && error.length>0){ %>
        <div class=" alert-danger" role="alert">
            <%= error %>
        </div>
        <% } %>
        <% if(success && success.length>0){ %>
        <div class=" alert-success" role="alert">
            <%= success %>
        </div>
        <% } %>
    </div>


    <div class="content">
        <div class="content-field">
            <h2>Edit <%= course.name %></h2>
            <form class="cc-form" action="/courses/<%= course._id %>?_method=PUT" method="POST">
                <input class="" type="text" name="course[name]" value="<%= course.name %>" placeholder=" Course name"
                    required><br>

                <input class="" type="text" name="course[material]" value="<%= course.material %>"
                    placeholder="Course material url" required><br>

                <input class="" type="text" name="course[description]" value="<%= course.description %>"
                    placeholder="description" required><br>

                <button class="create" class="">Submit</button>
            </form>
             <a href="/courses">Back to courses</a>
        </div>
        <div class="content-img">
            <img src="/images/undraw_teaching_f1cm.svg" width="60%">
        </div>
    </div>
    <br>


