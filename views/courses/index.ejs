<!DOCTYPE html>
<html>

<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="ie=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Mathisi</title>
    <link rel="stylesheet" href="/stylesheets/main.css">
    <link rel="icon" href="https://res.cloudinary.com/dexcjehc5/image/upload/v1569397404/Logo" type="image/svg"
    sizes="16x16">
    <link rel="stylesheet" href="/stylesheets/downloadItems.css">
     <link rel="stylesheet" href="/stylesheets/ham.css">
</head>

<body>
    <div class="background">

    </div>
    <header class="main-header desk-nav">
        <div class="brand-container">
            <a class="brand-link" href="/"><img class="brand-image" src="/appdesigns/Logo.svg" class=""
                    alt="Logo"></a>
        </div>

        <nav class="main-nav">

            <ul class="main-nav__items">
                 <% if(currentUser){%>
                 <li class="main-nav__item"><a href="/courses">Classes</a></li>

                 <%}%>
                <li class="main-nav__item"><a href="/about">About</a></li>
                <% if(!currentUser){ %>
                <li class="main-nav__item"><a href="/login">Login</a></li>
                <li class="main-nav__item"><a href="/getstarted">Sign Up</a></li>
                <% } else{ %>
                <li class="main-nav__item">Hello <%= currentUser.username.toUpperCase() %></li>
                <li class="main-nav__item"><a href="/logout">Logout</a></li>
                <% } %>
                <% if(currentUser && currentUser.position==="teacher"){ %>
                <a class="Download-btn" href="/courses/new">Add New Course</a>
                <% } %>
            </ul>
            


        </nav>
    </header>

    <header class="mobile-nav-header">
        <div class="moblie-header-cont">
            <a class="navbar-brand" href="/"><img style="width: 100px" src="/images/Logo.svg" class="" alt="Logo"></a>

            <button class="toggle-button">
                <span class="toggle-button__bar"></span>
                <span class="toggle-button__bar"></span>
                <span class="toggle-button__bar"></span>
            </button>
        </div>


        <nav class="mobile-nav">
            <ul class="mobile-nav__items">
                
                <% if(currentUser){%>
                <li class="mobile-nav__item"><a href="/courses">Classes</a></li>

                <%}%>
                <% if(!currentUser){ %>
                <li class="main-nav__item"><a href="/login">Login</a></li>
                <li class="main-nav__item"><a href="/getstarted">Sign Up</a></li>
                <% } else{ %>
                <li class="main-nav__item">Hello <%= currentUser.username.toUpperCase() %></li>
                <li class="main-nav__item"><a href="/logout">Logout</a></li>
                <% } %>
                <% if(currentUser && currentUser.position==="teacher"){ %>
                <li class="main-nav__item"><a href="/courses/new">Add New Course</a></li>
                <% } %>

                <!-- <li class="home mobile-nav__item"><a href="/">Home</a></li>
                <li class="about mobile-nav__item"><a href="/about">About</a></li>
                <li class="students mobile-nav__item"><a href="#student">Students</a></li>
                <li class="teachers mobile-nav__item"><a href="#teacher">Teachers</a></li> -->

            </ul>
        </nav>

    </header>

    <div class="">
        <% if(error && error.length>0){ %>
        <div class=" alert-danger" role="alert">
            <%= error %>
        </div>
        <% } %>
        <% if(success && success.length>0){ %>
        <div class=" alert-success" role="alert">
            <%= success %>
        </div>
        <% } %>
    </div>

    <main class="main-ourse">
        <% if(currentUser === "student") { %>
        <h1>Welcome to the Courses section <br>Download items</h1>
        <% }else{ %>
        <h1>Welcome to the Courses section </h1>
        <% } %>
        
        <table id="items" class="main-section">
            <tr>
                <th>Course</th>
                <th>Items</th>
                <th>More Info</th>
                <% if(currentUser === "teacher") { %>
                <th>Materials</th>
                <% } %>
            </tr>
<% courses.forEach(function(course){ %>
            <tr>
                <td><%= course.name.toUpperCase() %></td>
                <td><%= course.description %></td>
                <td><a href="/courses/<%= course._id %>" class="Download-btn">More Info</a></td>
                                <% if(currentUser === "student") { %>
                <td><a href="<%= course.material%>" class="Download-btn">Download</a></td>
                                <% } %>

               
                    <% if(currentUser && course.author.id.equals(currentUser._id)){ %>
                         <td>
                    <a class="edit" href="/courses/<%= course._id %>/edit ">Edit</a>
                    <form id="delete-form" action="/courses/<%= course._id %>?_method=DELETE" method="POST">
                        <button class="delete">Delete</button>
                    </form>
                     </td>
                    <% } %>
               
            </tr>
            <% }) %>
    
        </table>
    </main>

    <script src="/js/main.js"></script>
    <% include ../partials/footer %>
